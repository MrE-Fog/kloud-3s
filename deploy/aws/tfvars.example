# DNS Settings
# Delete the DNS module in main.tf if you do not have these
create_zone = "true"
domain = "<required>"

aws_access_key = "<required>"
aws_secret_key = "<required>"
aws_region = "eu-west-1"
aws_region_zone = "eu-west-1c"


k3s_version = "v1.20.4+k3s1"
node_count = 3
cni = "weave"
aws_size = "t2.micro"
enable_volumes           = "false"
volume_size              = 10
enable_floatingip        = "false"

install_app = {
  kubernetes_dashboard = false,
  longhorn             = false,
  ip-floater           = false,
  vault                = false,
  trow                 = false,
  superset             = false,
  sentry               = false,
  kube_prometheus      = false,
  elastic_cloud        = false
}
# HA Cluster
#ha_cluster = "false"
# External DNS Management and WildCard Letsencrypt Certs
#trform_domain = "false"
# LetsEncrypt Cert Issuance 
#create_certs = "true"

