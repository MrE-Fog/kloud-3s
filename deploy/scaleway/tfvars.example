# DNS Settings
# Delete the DNS module in main.tf if you do not have these
create_zone = "true"
domain = "<required>"
digitalocean_token = "<required>"

k3s_version = "v1.20.4+k3s1"
node_count = 2
scaleway_access_key = "<required>"
scaleway_secret_key = "<required>"
scaleway_organization_id = "<required>"
cni = "calico"

enable_volumes           = "false"
volume_size              = 10
enable_floatingip        = "false"

install_app = {
  kubernetes_dashboard = false,
  longhorn             = false,
  ip-floater           = false,
  vault                = false,
  trow                 = false,
  superset             = false,
  sentry               = false,
  kube_prometheus      = false,
  elastic_cloud        = false
}
# HA Cluster
#ha_cluster = "true"
# External DNS Management and WildCard Letsencrypt Certs
#trform_domain = "false"
# LetsEncrypt Cert Issuance 
#create_certs = "true"

